<Window x:Class="Hell.View.Chemicals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hell.View"
        mc:Ignorable="d"
        Title="Химикаты" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Название" Margin="5"/>
            <TextBox x:Name="НазваниеTextBox" Margin="5"/>

            <TextBlock Text="Назначение" Margin="5"/>
            <TextBox x:Name="НазначениеTextBox" Margin="5"/>

            <TextBlock Text="Дата производства" Margin="5"/>
            <DatePicker x:Name="ДатаПроизводстваDatePicker" Margin="5"/>

            <TextBlock Text="Срок годности (в днях)" Margin="5"/>
            <TextBox x:Name="СрокГодностиTextBox" Margin="5"/>

            <TextBlock Text="Производитель" Margin="5"/>
            <TextBox x:Name="ПроизводительTextBox" Margin="5"/>

            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
