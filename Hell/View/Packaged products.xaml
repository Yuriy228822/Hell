<Window x:Class="Hell.View.Packaged_products"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hell.View"
        mc:Ignorable="d"
        Title="Фасованная продукция" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Название продукта" Margin="5"/>
            <TextBox x:Name="НазваниеПродуктаTextBox" Margin="5"/>

            <TextBlock Text="Количество" Margin="5"/>
            <TextBox x:Name="КоличествоTextBox" Margin="5"/>

            <TextBlock Text="Тип упаковки" Margin="5"/>
            <TextBox x:Name="ТипУпаковкиTextBox" Margin="5"/>

            <TextBlock Text="Дата фасовки" Margin="5"/>
            <DatePicker x:Name="ДатаФасовкиDatePicker" Margin="5"/>

            <TextBlock Text="Срок годности (дни)" Margin="5"/>
            <TextBox x:Name="СрокГодностиTextBox" Margin="5"/>

            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
