<Window x:Class="Hell.View.Field"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hell.View"
        mc:Ignorable="d"
          Title="Поля" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Название" Margin="5"/>
            <TextBox x:Name="НазваниеTextBox" Margin="5"/>

            <TextBlock Text="Местоположение" Margin="5"/>
            <TextBox x:Name="МестоположениеTextBox" Margin="5"/>

            <TextBlock Text="Площадь" Margin="5"/>
            <TextBox x:Name="ПлощадьTextBox" Margin="5"/>

            <TextBlock Text="Тип почвы" Margin="5"/>
            <TextBox x:Name="ТипПочвыTextBox" Margin="5"/>

            <TextBlock Text="Урожайность" Margin="5"/>
            <TextBox x:Name="УрожайностьTextBox" Margin="5"/>

            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
