<Window x:Class="Hell.View.Packing_stage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hell.View"
        mc:Ignorable="d"
        Title="Этап фасовки" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Этап" Margin="5"/>
            <TextBox x:Name="ЭтапTextBox" Margin="5"/>

            <TextBlock Text="Описание" Margin="5"/>
            <TextBox x:Name="ОписаниеTextBox" Margin="5"/>

            <TextBlock Text="Время выполнения" Margin="5"/>
            <TextBox x:Name="ВремяВыполненияTextBox" Margin="5"/>

            <TextBlock Text="Ответственный" Margin="5"/>
            <TextBox x:Name="ОтветственныйTextBox" Margin="5"/>

            <TextBlock Text="Дата" Margin="5"/>
            <DatePicker x:Name="ДатаDatePicker" Margin="5"/>

            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
