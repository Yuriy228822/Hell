<Window x:Class="Hell.View.Recipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hell.View"
        mc:Ignorable="d"
        Title="Рецепты" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Название" Margin="5"/>
            <TextBox x:Name="НазваниеTextBox" Margin="5"/>

            <TextBlock Text="Описание" Margin="5"/>
            <TextBox x:Name="ОписаниеTextBox" Margin="5"/>

            <TextBlock Text="Ингредиенты" Margin="5"/>
            <TextBox x:Name="ИнгредиентыTextBox" Margin="5"/>

            <TextBlock Text="Инструкции" Margin="5"/>
            <TextBox x:Name="ИнструкцииTextBox" Margin="5"/>

            <TextBlock Text="Время приготовления" Margin="5"/>
            <TextBox x:Name="ВремяПриготовленияTextBox" Margin="5"/>

            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
