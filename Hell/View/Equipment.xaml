<Window x:Class="Hell.View.Equipment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hell.View"
        mc:Ignorable="d"
        Title="Оборудование" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Название" Margin="5"/>
            <TextBox x:Name="НазваниеTextBox" Margin="5"/>

            <TextBlock Text="Тип" Margin="5"/>
            <TextBox x:Name="ТипTextBox" Margin="5"/>

            <TextBlock Text="Производитель" Margin="5"/>
            <TextBox x:Name="ПроизводительTextBox" Margin="5"/>

            <TextBlock Text="Дата покупки" Margin="5"/>
            <DatePicker x:Name="ДатаПокупкиDatePicker" Margin="5"/>

            <TextBlock Text="Состояние" Margin="5"/>
            <TextBox x:Name="СостояниеTextBox" Margin="5"/>

            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
