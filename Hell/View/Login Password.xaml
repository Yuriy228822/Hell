<Window x:Class="Hell.View.Login_Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hell.View"
        mc:Ignorable="d"
        Title="Логин и Пароль" Height="250" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Логин" Margin="5"/>
            <TextBox x:Name="ЛогинTextBox" Margin="5"/>

            <TextBlock Text="Пароль" Margin="5"/>
            <PasswordBox x:Name="ПарольPasswordBox" Margin="5"/>

            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
