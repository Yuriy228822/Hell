<Window x:Class="Hell.View.Shop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hell.View"
        mc:Ignorable="d"
       Title="Магазин" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Название" Margin="5"/>
            <TextBox x:Name="НазваниеTextBox" Margin="5"/>

            <TextBlock Text="Адрес" Margin="5"/>
            <TextBox x:Name="АдресTextBox" Margin="5"/>

            <TextBlock Text="Контактные данные" Margin="5"/>
            <TextBox x:Name="КонтактныеДанныеTextBox" Margin="5"/>

            <TextBlock Text="Время работы" Margin="5"/>
            <TextBox x:Name="ВремяРаботыTextBox" Margin="5"/>

            <TextBlock Text="Запасы" Margin="5"/>
            <TextBox x:Name="ЗапасыTextBox" Margin="5"/>

            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
