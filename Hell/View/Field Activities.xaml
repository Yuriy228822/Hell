<Window x:Class="Hell.View.Field_Activities"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hell.View"
        mc:Ignorable="d"
         Title="Полевые мероприятия" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Дата" Margin="5"/>
            <DatePicker x:Name="ДатаDatePicker" Margin="5"/>

            <TextBlock Text="Тип мероприятия" Margin="5"/>
            <TextBox x:Name="ТипМероприятияTextBox" Margin="5"/>

            <TextBlock Text="Ответственный" Margin="5"/>
            <TextBox x:Name="ОтветственныйTextBox" Margin="5"/>

            <TextBlock Text="Продолжительность (в часах)" Margin="5"/>
            <TextBox x:Name="ПродолжительностьTextBox" Margin="5"/>

            <TextBlock Text="Оборудование" Margin="5"/>
            <TextBox x:Name="ОборудованиеTextBox" Margin="5"/>

            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
